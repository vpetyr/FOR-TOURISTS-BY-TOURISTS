<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_11_Upload_Picture">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView0702"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/logo_1" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="London Tourist Guide"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="SELECT A PICTURE"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="563dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView1101"
                    android:layout_width="288dp"
                    android:layout_height="194dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/ic_launcher"/>


                <EditText
                    android:id="@+id/editText1102"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:hint="Attraction Name..."
                    android:inputType="textPersonName"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/button1101"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/iconfinder_arrow_outline_3_342792"
                    android:fontFamily="@font/acme"
                    android:text="Photo"
                    android:textAllCaps="false"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/button1102"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@drawable/iconfinder_arrow_outline_3_342792"
                    android:fontFamily="@font/acme"
                    android:text="Upload"
                    android:textAllCaps="false"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

</android.support.constraint.ConstraintLayout>